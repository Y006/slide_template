\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{./style/projectfonts}[2024/12/28 Custom fonts package]

% 英文字体设置
\RequirePackage{fontspec}

\setmainfont{Times}[          % 衬线字体
    Path = ./fonts/,
    Extension = .ttf,
    BoldFont = timesbd,       % 粗体
    ItalicFont = timesi,      % 斜体
    BoldItalicFont = timesbi  % 粗斜体
]

\setsansfont{Arial}[          % 无衬线字体
    Path = ./fonts/,
    Extension = .ttf,
    BoldFont = arialbd,       % 粗体
    ItalicFont = ariali,      % 斜体
    BoldItalicFont = arialbi  % 粗斜体
]

\setmonofont{Ubuntu Mono derivative Powerline}[  % 等宽字体
    Path = ./fonts/,
    Extension = .ttf,
    BoldFont = {Ubuntu Mono derivative Powerline Bold},                 % 粗体
    ItalicFont = {Ubuntu Mono derivative Powerline Italic},             % 斜体
    BoldItalicFont = {Ubuntu Mono derivative Powerline Bold Italic}     % 粗斜体
]

% 中文字体设置
\RequirePackage{xeCJK}

\setCJKmainfont{SimSun}[            % 中文衬线字体
    Path = ./fonts/,
    Extension = .ttc,
    BoldFont = simhei.ttf,          % 用黑体代替粗体
    ItalicFont = SimSun,            % 用宋体的伪斜体
    BoldItalicFont = simhei.ttf     % 用黑体的伪斜体
]

\setCJKsansfont{SimHei}[            % 中文无衬线字体
    Path = ./fonts/,
    Extension = .ttf,
    BoldFont = simhei.ttf,          % 继续使用黑体
    ItalicFont = simhei.ttf,        % 用黑体的伪斜体
    BoldItalicFont = simhei.ttf     % 用黑体的伪斜体
]

\setCJKmonofont{SimHei}[            % 中文等宽字体
    Path = ./fonts/,
    Extension = .ttf,
    BoldFont = simhei.ttf,          % 继续使用黑体
    ItalicFont = simhei.ttf,        % 用黑体的伪斜体
    BoldItalicFont = simhei.ttf     % 用黑体的伪斜体
]

